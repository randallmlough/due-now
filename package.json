{
  "name": "invoiced",
  "private": true,
  "engines": {
    "node": "13.6.0",
    "yarn": "1.22.0"
  },
  "scripts": {
    "start:rails": "rails s -p 3001",
    "start:react":"yarn --cwd frontend start",
    "watch:css": "yarn --cwd frontend watch:css",
    "build": "yarn --cwd frontend install && yarn --cwd frontend build && yarn --cwd frontend build:css",
    "deploy": "cp -a frontend/build/. public/",
    "heroku-postbuild": "yarn build && yarn deploy"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
